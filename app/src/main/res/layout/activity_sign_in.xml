<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="@color/purple_700">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginVertical="27dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/join" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="250dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="@string/sign_in"/>

    <EditText
        android:id="@+id/edit_username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginVertical="310dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="5dp"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:textColorHighlight="@color/white"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="390dp"
        android:layout_marginLeft="60dp"
        android:layout_alignParentStart="true"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColorHighlight="@color/white"
        android:textColorHint="@android:color/darker_gray" />

    <Button
        android:id="@+id/btn_join"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:layout_marginVertical="459dp"
        android:layout_marginLeft="57dp"
        android:textSize="20dp"
        android:text="@string/button_sign_in" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="510dp"
        android:layout_marginLeft="120dp"
        android:text="@string/sign_up_text"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="540dp"
        android:layout_marginLeft="173dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="@string/link_sign_up"/>
</RelativeLayout>
