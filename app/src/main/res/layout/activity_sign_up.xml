<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="@color/purple_700">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginVertical="27dp"
        android:layout_marginLeft="135dp"
        android:src="@drawable/join" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="185dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="@string/sign_up"/>

    <EditText
        android:id="@+id/edit_username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginVertical="240dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="5dp"
        android:hint="@string/username"
        android:inputType="text"
        android:textColorHighlight="@color/white"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginVertical="310dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="5dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColorHighlight="@color/white"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="380dp"
        android:layout_marginLeft="60dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColorHighlight="@color/white"
        android:textColorHint="@android:color/darker_gray" />

    <Button
        android:id="@+id/btn_join"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:layout_marginVertical="459dp"
        android:layout_marginLeft="57dp"
        android:textSize="20dp"
        android:text="@string/button_sign_up" />

    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="510dp"
        android:layout_marginLeft="107dp"
        android:text="@string/sign_in_text"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="540dp"
        android:layout_marginLeft="173dp"
        android:text="@string/sign_in"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />
</RelativeLayout>
