<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/complete_care"
    tools:context=".ui.services.completeCareFragment">

    <!-- TODO: Update blank fragment layout -->
<!--    <TextView-->
<!--        android:id="@+id/text_complete_care"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="25dp"-->
<!--        android:text="@string/complete_care_fragment" />-->

    <EditText
        android:id="@+id/pet_name"
        android:layout_width="375dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="24dp"

        android:layout_marginEnd="26dp"
        android:hint="your pet name" />

    <EditText
        android:id="@+id/pickup_time"
        android:layout_width="360dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="261dp"
        android:hint="your pet pickup time" />

    <EditText
        android:id="@+id/pickup_loc"
        android:layout_width="360dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="179dp"
        android:hint="your pet pickup location" />

    <EditText
        android:id="@+id/pet_type"
        android:layout_width="360dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:hint="your pet breed" />

    <TextView
        android:id="@+id/title_select_treatment"
        android:layout_width="360dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="346dp"
        android:text="select treatment"
        android:textSize="25dp" />

    <CheckBox
        android:id="@+id/bath_opt"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="277dp"
        android:text="@string/bathing" />

    <CheckBox
        android:id="@+id/haircut_opt"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="148dp"
        android:text="@string/haircut" />

    <CheckBox
        android:id="@+id/ear_clean_opt"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="82dp"
        android:text="@string/ear_cleaning" />

    <CheckBox
        android:id="@+id/nail_trim_opt"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="212dp"
        android:text="@string/nail_trimming" />

    <Button
        android:id="@+id/btn_book"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:text="book" />
</RelativeLayout>