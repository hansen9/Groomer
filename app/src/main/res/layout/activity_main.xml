<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_banner"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:src="@drawable/banner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_menu_haircut"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginBottom="530dp"
            android:layout_marginVertical="230dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/haircut" />

        <Button
            android:id="@+id/btn_menu_ear_cleaning"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginBottom="530dp"
            android:layout_marginVertical="230dp"
            android:layout_marginRight="27dp"
            android:layout_marginLeft="27dp"
            android:text="@string/ear_cleaning" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_menu_bathing"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginBottom="630dp"
            android:layout_marginVertical="330dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/bathing" />


        <Button
            android:id="@+id/btn_menu_nail_trimming"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginBottom="625dp"
            android:layout_marginVertical="325dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:text="@string/nail_trimming" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_menu_complete_care"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginVertical="430dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="730dp"
            android:text="@string/complete_care" />

        <Button
            android:id="@+id/btn_menu_consument_review"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginVertical="430dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="730dp"
            android:text="@string/consument_review" />
    </LinearLayout>
</RelativeLayout>